<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thêm phương tiện</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 100px;
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thêm phương tiện</h5>
          </div>
          <div class="card-body">
            <form id="form-themphuongtien" >
              <div class="form-group">
                <label>Số thẻ:</label>
                <input type="text" class="form-control" id="sothe" name="sothe" required>
              </div>
              <div class="form-group">
                <label>Biển số:</label>
                <input type="text" class="form-control" id="bienso" name="bienso" required>
              </div>
              <div class="form-group">
                <label>Loại phương tiện:</label>
                <input type="text" class="form-control" id="loaiphuongtien" name="loaiphuongtien" required>
              </div>
              <div class="form-group">
                <label>Ảnh phương tiện:</label>
                <input type="file" class="form-control" id="anhphuongtien" name="anhphuongtien" accept="image/*" required>
              </div>
              <div class="form-group">
                <label>Ảnh biển số:</label>
                <input type="file" class="form-control" id="anhbienso" name="anhbienso" accept="image/*" required>
              </div>
              <button type="submit" class="btn btn-primary">Thêm phương tiện</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('form-themphuongtien').addEventListener('submit', function(event) {
        event.preventDefault(); // Ngăn chặn hành vi mặc định của form
  
        var formData = new FormData();
        formData.append('sothe', document.getElementById('sothe').value);
        formData.append('bienso', document.getElementById('bienso').value);
        formData.append('loaiphuongtien', document.getElementById('loaiphuongtien').value);
        formData.append('anhphuongtien', document.getElementById('anhphuongtien').files[0]);
        formData.append('anhbienso', document.getElementById('anhbienso').files[0]);

        // Sử dụng Fetch API để gửi FormData lên server (ở đây là Node.js)
        fetch('/phuongtien/themphuongtien', {
            method: 'POST',
            body: formData
        })
          .then(response => {
            if (!response.ok) {
              throw new Error('Thêm phương tiện thất bại');
            }
            return response;
          })
          .then(data => {
            // Hiển thị thông báo thành công khi cập nhật thành công
            Swal.fire({
              icon: 'success',
              title: 'Cập nhật thành công',
              showConfirmButton: false,
              timer: 1500
            }).then(()=>{
                // Redirect về trang danh sách khách hàng sau khi cập nhật thành công
                window.location.href = '/phuongtien';
              });
          })
          .catch(error => {
            // Hiển thị thông báo lỗi khi cập nhật thất bại
            Swal.fire({
              icon: 'error',
              title: 'Oops...',
              text: error.message
            });
      });
      });
    });
  </script>
  

<!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
