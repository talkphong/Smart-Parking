<!DOCTYPE html>
<html>
  <head>
    <title>Quản lý nhân viên</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <style>
      /* Định dạng khi hover vào dòng của bảng */
      .table-hover tbody tr:hover {
          background-color: #f5f5f5;
      }

      .table-hover thead th:hover {
        background-color: initial; /* Hoặc một giá trị màu nền mặc định khác */
      }

    </style>

  </head>
  <body>

    <section class="myheader">
      <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center bg-light">
                <h1>VMU</h1>
                <p>Welcome to VMU</p>
            </div>
            <div class="col-12 text-right mb-4">
              <button id="logoutBtn" class="btn btn-secondary mt-4">Đăng xuất</button>
              <script>
                  document.getElementById('logoutBtn').addEventListener('click', function() {
                      // Gửi yêu cầu đăng xuất đến máy chủ
                      fetch('/dangxuat', {
                          method: 'POST',
                          credentials: 'same-origin' // Đảm bảo gửi cùng các cookie với trang
                      }).then(function(response) {
                          // Kiểm tra phản hồi từ máy chủ
                          if (response.ok) {
                              // Chuyển hướng hoặc thực hiện các hành động phù hợp sau khi đăng xuất thành công
                              window.location.href = '/';
                          } else {
                              console.error('Đã xảy ra lỗi khi đăng xuất');
                          }
                      }).catch(function(error) {
                          console.error('Lỗi kết nối: ', error);
                      });
                  });
              </script>
            </div>
        </div>
      </div>
    </section>

    <section class="mymainmenu">
      <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/index">Trang chủ</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/khachhang">Khách hàng</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/nhanvien">Nhân viên</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/the">Thẻ</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/phuongtien">Phương tiện</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/taikhoan">Tài khoản</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/cong">Cổng</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active text-muted" aria-current="page" href="/lichsu">Lịch sử</a>
              </li>
            </ul>
            <form class="d-flex" id="search-lichsu"action="/lichsu/search" method="GET">
              <input class="form-control me-2" type="search" id="lichsu-input" placeholder="Tìm kiếm" aria-label="Search">
              <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
            </form>
          </div>
        </div>
      </nav>    
    </section>
    <section class="mymaincontent">
        <div class="row">
            <div class="col-11">
                <table class="table table-hover w-75 m-auto text-center">
                    <tr>
                        <th>Thời gian</th>
                        <th>Tên cổng</th>
                        <th>Số thẻ</th>
                        <th>Biển số</th>
                        <th>Chủ thẻ</th>
                        <th>Nhân viên</th>
                        <th>Ảnh phương tiện</th>
                        <th>Ảnh biển số</th>
                    </tr>
                    
                    <% for (let c of list ) { %>
                        <tr>
                            <td> 
                                <%
                                  var date = new Date(c.thoigianmo.toLocaleString('en-US', { timeZone: 'Asia/Ho_Chi_Minh' }));
                                  
                                  let hours = String(date.getHours()).padStart(2, '0');
                                  let minutes = String(date.getMinutes()).padStart(2, '0');
                                  let day = String(date.getDate()).padStart(2, '0');
                                  let month = String(date.getMonth() + 1).padStart(2, '0'); // Tháng trong JavaScript bắt đầu từ 0
                                  let year = date.getFullYear();
  
                                  var ngay = day + "-" + month + "-" + year;
                                  var gio = hours + ":" + minutes;
                                %>
                                <%= ngay + ", " + gio %> 
                            </td>
                            <td> <%= c.tencong %> </td>
                            <td> <%= c.sothe %> </td>
                            <td> <%= c.bienso %> </td>
                            <td> <%= c.tenKH %> </td>
                            <td> <%= c.tenNV %> </td>
                            <td>
                                <img src="<%= c.path_anhphuongtien %>" alt="Ảnh phương tiện" style="max-width: 100px; max-height: 100px;">
                            </td>
                            <td>
                                <img src="<%= c.path_anhbienso %>" alt="Ảnh biển số" style="max-width: 100px; max-height: 100px;">
                            </td>
                        </tr>
                        <% } %>        
                </table>
            </div>
        </div>     
    </section>

    <section class="myfooter">
      <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">© 2024 Quản Lý Phương Tiện Bãi Xe Chung Cư</span>
        </div>
      </footer>
    </section>

    <script>
      document.getElementById('search-lichsu').addEventListener('submit', function(event) {
        event.preventDefault(); // Ngăn chặn form submit mặc định
        var keyword = document.getElementById('lichsu-input').value;
        search(keyword);
      });

      function search(keyword) {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', `/lichsu/search?keyword=${keyword}`, true);
        xhr.onreadystatechange = function() {
          if (xhr.readyState == 4 && xhr.status == 200) {
            var data = JSON.parse(xhr.responseText);
            // Hiển thị kết quả tìm kiếm lên bảng
            displaySearchResult(data);
          }
        };
        xhr.send();
      }

      function displaySearchResult(data) {
        var table = document.querySelector('.table');
        table.innerHTML = ''; // Xóa hết nội dung trong bảng trước khi thêm kết quả mới

        var tableHead = document.createElement('thead'); // Tạo thead mới
        var tableHeadRow = document.createElement('tr'); // Tạo dòng của thead
        tableHeadRow.innerHTML = `
            <th>thời gian</th>
            <th>Tên cổng</th>
            <th>Số thẻ</th>
            <th>Biển số</th>
            <th>Chủ thẻ</th>
            <th>Nhân viên</th>
            <th>Ảnh phương tiện</th>
            <th>Ảnh biển số</th>`;
        tableHead.appendChild(tableHeadRow); // Thêm dòng vào thead
        table.appendChild(tableHead); // Thêm thead vào bảng

        var tableBody = document.createElement('tbody'); // Tạo tbody mới
        data.forEach(function(item) {
          var row = document.createElement('tr');

          var date = new Date(item.thoigianmo.toLocaleString('en-US', { timeZone: 'Asia/Ho_Chi_Minh' }));
          let hours = String(date.getHours()).padStart(2, '0');
          let minutes = String(date.getMinutes()).padStart(2, '0');
          let day = String(date.getDate()).padStart(2, '0');
          let month = String(date.getMonth() + 1).padStart(2, '0'); // Tháng trong JavaScript bắt đầu từ 0
          let year = date.getFullYear();
          var ngay = day + "-" + month + "-" + year;
          var gio = hours + ":" + minutes;

          row.innerHTML = `
            <td>${ngay}, ${gio}</td>
            <td>${item.tencong}</td>
            <td>${item.sothe}</td>
            <td>${item.bienso}</td>
            <td>${item.tenKH}</td>
            <td>${item.tenNV}</td>
            <td>
              <img src="${item.path_anhphuongtien}" alt="Ảnh phương tiện" style="max-width: 100px; max-height: 100px;">
            </td>
            <td>
              <img src="${item.path_anhbienso}" alt="Ảnh biển số" style="max-width: 100px; max-height: 100px;">
            </td>
            <td>`;
          tableBody.appendChild(row); // Thêm dòng vào tbody
        });
        table.appendChild(tableBody); // Thêm tbody vào bảng
      }

    </script>

    <!-- Thêm các thư viện JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  </body>
</html>
